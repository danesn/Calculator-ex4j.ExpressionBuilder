<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextView"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorJudul"
                android:text="Simple Calculator"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorJudul"
                android:text="Danes"/>

        </RelativeLayout>

            <TextView
                android:id="@+id/tvOutput"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"
                android:singleLine="true"
                android:background="@drawable/textview_background"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:padding="20dp"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_c"
            android:textSize="22sp"
            android:layout_height="50dp"
            android:textColor="@color/colorTextView"
            android:text="C"/>

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_height="50dp"
            android:layout_weight="0"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_symbol_background"
            android:text="/"/>

        <Button
            android:id="@+id/btnMult"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:layout_height="50dp"
            android:layout_weight="0"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_symbol_background"
            android:text="*"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_height="50dp"
            android:background="@drawable/btn_number_background"
            style="?android:attr/borderlessButtonStyle"
            android:text="7"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_height="50dp"
            android:background="@drawable/btn_number_background"
            style="?android:attr/borderlessButtonStyle"
            android:text="8"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_height="50dp"
            android:background="@drawable/btn_number_background"
            style="?android:attr/borderlessButtonStyle"
            android:text="9"/>

        <Button
            android:id="@+id/btnSubstract"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:layout_height="50dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_symbol_background"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_number_background"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="4"/>

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_number_background"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="5"/>

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_number_background"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_number_background"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="1"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_number_background"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="2"/>

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_number_background"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="3"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_symbol_background"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn00"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_height="50dp"
            android:background="@drawable/btn_number_background"
            android:text="00" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_height="50dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_number_background"
            android:text="0"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_height="50dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_symbol_background"
            android:text="."/>

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:layout_height="50dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_equal"
            android:textColor="@color/colorTextView"
            android:text="="/>

    </LinearLayout>

</LinearLayout>